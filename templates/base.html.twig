<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="font-sans flex flex-col text-center sm:flex-row sm:text-left sm:justify-between py-4 px-6 bg-white shadow sm:items-baseline w-full">
    <div class="mb-2 sm:mb-0">
        <a href="{{ path('home_page') }}"
           class="text-2xl no-underline text-grey-darkest hover:text-blue-dark">Home</a>
    </div>
    <div>
        <a href="{{ path('add_movie') }}" class="text-lg no-underline text-grey-darkest hover:text-blue-dark ml-4">Ajouter
            un film/ Ajouter une note</a>
        <a href="{{ path('add_movie_bulk') }}"
           class="text-lg no-underline text-grey-darkest hover:text-blue-dark ml-4">Ajouter un lot</a>
        <a href="{{ path('statistics') }}" class="text-lg no-underline text-grey-darkest hover:text-blue-dark ml-4">Stats</a>

    </div>

</nav>

<div class="mx-32 my-8">
    {% block body %}{% endblock %}

    <div class="fixed bottom-0 right-0 mr-8">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }} ">
                    <div class="flex bg-blue-100 rounded-lg p-4 mb-4 text-sm text-blue-700" role="alert">
                        <svg class="w-5 h-5 inline mr-3" fill="currentColor" viewBox="0 0 20 20"
                             xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                  clip-rule="evenodd"></path>
                        </svg>
                        <div>
                            <span class="font-medium">{{ label }} !</span> {{ message }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>
</body>
</html>
